#!/bin/sh

[ -d "$HOME/.local/bin/X11" ] \
    && export PATH="$PATH:$HOME/.local/bin/X11"

[ -x "$HOME/.local/bin/X11/rofi-sshpass" ] \
    && export SUDO_ASKPASS="$HOME/.local/bin/X11/rofi-sshpass"

xset r rate 330 25

remapkeys &
redshift &

case "$DESKTOP_SESSION" in

    i3*)
        ;;

    bspwm)
        setbg &
        compton &
        launch-sxhkd &
        launch-polybar bspwm &
        dunst &
        ;;

esac

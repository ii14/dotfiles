#!/bin/zsh

alias reload="echo 'Reloading ${SHELL}...'; exec '$SHELL' -l"
alias path='echo -e ${PATH//:/\\n}'
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/.git --work-tree=$HOME'

# SHORTCUTS ------------------------------------------------------------------------------
alias j='jobs'
alias d='disown'
alias m='make'
alias xo='xdg-open'

# FLAGS ----------------------------------------------------------------------------------
alias cp='cp -iv'
alias rscp='rsync -avhP'
alias mv='mv -iv'
alias mkd='mkdir -p'
alias df='df -h'
alias du='du -h'
alias dmesg='dmesg -T'
alias cal='LC_ALL=C ncal -Mb3'
alias lcal='ncal -Mb3'
alias dt='date "+%Y-%m-%d %H:%M:%S"'
alias bc='bc -q'
alias mount='mount -v'
alias umount='umount -v'
alias zathura='zathura --fork'
alias mpv='mpv --force-window'

# CD -------------------------------------------------------------------------------------
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

function .f {
    list="$(pwd | sed 's#/#\n#g' | tac | awk 'NR > 1 {print NR-1 "\t" $0 "/"}')"
    res="$(echo "$list" | fzf --reverse --height=$(($(echo "$list" | wc -l) + 2)))" \
        || return 0
    cd "$(printf '../%.0s' $(seq 1 $(echo "$res" | cut -f 1)))"
}

function mkcd {
    if (( ARGC != 1 )); then
        echo 'usage: mkcd <directory>' >&2
        return 1
    fi
    [[ ! -d "$1" ]] && mkdir -pv "$1"
    cd "$1"
}

function dev {
    res="$(
        fd -H -t d \
                -E '.git' \
                -E 'build' \
                -E '.cache' \
                -E '.clangd' \
                -E 'zig-cache' \
                -E 'CMakeFiles' \
                -E '.mypy_cache' \
                . ~/dev \
            | fzf --prompt='~/dev/' --reverse --height=50%)" \
        && cd "$res"
}

function repos {
    res="$(
        fd -t d -d 1 . ~/repos \
            | fzf --prompt='~/repos/' --reverse --height=50%)" \
        && cd "$res"
}

function pro {
    res="$(
        cd "${1:-.}" && \
        fd -H -t d '^\.git$' . -x echo {//} \
            | fzf --reverse --height=50%)" \
        && cd "${1:-.}/$res"
}

alias mm='pro ~/dev/mm'

# LS -------------------------------------------------------------------------------------
alias ls='ls -hNv --color=auto --group-directories-first'

# MISC -----------------------------------------------------------------------------------
alias ipinfo='curl ipinfo.io'
function unshorten {
    curl -s "https://linkunshorten.com/api/link?url=$1" | jq -M .
}

function rcd {
    if (( ARGC != 1 )); then
        echo 'usage: rcd <config>' >&2
        return 1
    fi
    cd "${$(rc -q "$1"):h}"
}

# ARCHIVES -------------------------------------------------------------------------------
function ex {
    if (( ARGC != 1 )); then
        echo 'usage: ex <file>' >&2
        return 1
    fi
    if [[ ! -f "$1" ]]; then
        echo "'$1' is not a valid file" >&2
        return 1
    fi
    case $1 in
        *.(tar.bz2|tbz2|tbz))
            tar -xvjf "$1" ;;
        *.(tar.gz|tgz))
            tar -xvzf "$1" ;;
        *.(tar.xz|txz))
            tar -xvJf "$1" ;;
        *.tar)
            tar -xvf "$1" ;;
        *.rar)
            unrar x "$1" ;;
        *.7z)
            7z x "$1" ;;
        *.zip)
            unzip "$1" ;;
        *.bz2)
            bunzip2 -v "$1" ;;
        *.gz)
            gunzip -v "$1" ;;
        *.Z)
            uncompress -v "$1" ;;
        *)
            echo "'$1' cannot be extracted via ex()" >&2
            return 1
            ;;
    esac
}

function exl {
    if (( ARGC != 1 )); then
        echo 'usage: ex <file>' >&2
        return 1
    fi
    if [[ ! -f "$1" ]]; then
        echo "'$1' is not a valid file" >&2
        return 1
    fi
    case $1 in
        *.(tar.bz2|tbz2|tbz))
            tar -tvjf "$1" ;;
        *.(tar.gz|tgz))
            tar -tvzf "$1" ;;
        *.(tar.xz|txz))
            tar -tvJf "$1" ;;
        *.tar)
            tar -tvf "$1" ;;
        *.rar)
            unrar vl "$1" ;;
        *.7z)
            7z l "$1" ;;
        *.zip)
            unzip -l "$1" ;;
        *.bz2)
            bunzip2 -vt "$1" ;;
        *.gz)
            gunzip -vl "$1" ;;
        *.Z)
            uncompress -vl "$1" ;;
        *)
            echo "'$1' cannot be extracted via exl()" >&2
            return 1
            ;;
    esac
}

if [ "$TERM" = 'xterm-kitty' ]; then
    alias ssh='TERM=xterm-256color ssh'
    alias icat='kitty icat --align=left'
fi

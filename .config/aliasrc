alias tl='tmux ls'
function ta {
    if [[ -z "$1" ]]; then
        tmux attach
    else
        tmux attach -t "$1"
    fi
}

# DEV ------------------------------------------------------------------------------------
alias g++='g++ -Wall -Wextra -Wshadow'
alias gcc='gcc -Wall -Wextra -Wshadow -pedantic'
alias demangle='c++filt -t'
alias py='python3.8'

function objd {
    if [[ $# -ne 1 ]]; then
        echo 'usage: objd <file>' >&2
        return 1
    fi
    objdump -drwC -M intel "$1" | vim - -c 'setf asm | set nomodified'
}

# A/V ------------------------------------------------------------------------------------
alias ffmpeg='ffmpeg -hide_banner'
alias ffplay='ffplay -hide_banner'
alias ffprobe='ffprobe -hide_banner'
alias ytdl='youtube-dl'
alias ytdlu='pip install --upgrade youtube-dl'
alias ytdlp='yt-dlp'
alias ytdlpu='pip install --upgrade yt-dlp'
alias ytmp3='youtube-dl -x -f bestaudio/best'
function ytls {
    if (( ARGC < 1 )); then
        echo 'usage: ytls <playlist/channel>' >&2
        return 1
    fi
    yt-dlp --ignore-config -j "$1" \
        | jq -r '(.id + " :: " + .uploader + " :: " + .title)'
}

# VIM ------------------------------------------------------------------------------------
alias vgit='vim "+Gedit :"'
alias vim-install='vim "+au FileType vim-plug ++once only | set nonu nornu | bd#" +PlugInstall'
alias vim-update='vim "+au FileType vim-plug ++once only | set nonu nornu | bd#" +PlugUpdate'
alias vimclean='vim -u NORC --clean "+syntax off"'
alias :q='exit'
function :h {
    if ((ARGC == 0)); then
        vim '+Helptags'
    elif ((ARGC == 1)); then
        vim "+h $1 | only"
    fi
}
[ -v NVIM_LISTEN_ADDRESS ] && alias vim='vim -u $VIMCONFIG/remote.vim -i NONE --headless'

# GIT ------------------------------------------------------------------------------------
function g {
    if [[ $# -eq 0 ]]; then
        git status
    else
        git $@
    fi
}
alias ga='git add'
alias gA='git add --all :/'
alias gc='git commit'
alias gcm='git commit -m'
alias gd='git diff'
alias gh='git stash'
alias ghl='git stash list'
alias gl='git l'
alias gl1='git --no-pager log -n 1'
alias gs='git status'
alias gP='git push'
alias gp='git pull'
function gb {
    git branch \
        | grep --invert-match '\*' \
        | cut -c 3- \
        | fzf --preview='git log {}' --preview-window=noborder \
        | xargs --no-run-if-empty git checkout
}
function clone {
    if ! repo="$(echo "$1" | sed 's:.*/\(.*\)\.git:\1:')"; then
        echo 'failed to parse uri' >&2
        return 1
    fi
    if ! git clone "$1"; then
        echo 'failed to clone repo' >&2
        return 1
    fi
    if ! cd "$repo"; then
        echo 'directory not found' >&2
        return 1
    fi
    return 0
}

# APT ------------------------------------------------------------------------------------

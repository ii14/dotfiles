[include]
    path = ~/.config/git/private

[core]
    excludesFile = ~/.config/git/ignore

[pager]
    branch = false

[push]
    default = current

[color]
    ui = auto

[alias]
    st = status
    ci = commit --verbose
    cia = commit --verbose --amend
    co = checkout
    com = checkout master
    aa = add --all
    df = diff
    dfs = diff --staged
    br = branch -vv
    brs = branch -vva
    wt = worktree
    l = log --graph --abbrev-commit --decorate --format=line --all
    lt = !git --no-pager l -n 10
    l1 = !git --no-pager log -n 1
    np = !git --no-pager
    root = rev-parse --show-toplevel

[pretty]
    line = '%C(bold blue)%h%C(reset) -%C(bold yellow)%d%C(reset) %C(white)%s%C(reset) %C(bold green)(%ar)%C(reset) %C(dim white)<%an>%C(reset)'

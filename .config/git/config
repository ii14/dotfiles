[include]
    path = ~/.config/git/private

[core]
    excludesFile = ~/.config/git/ignore
    pager = less -FX

[pager]
    branch = false

[push]
    default = current

[color]
    ui = auto

[alias]
    st = status
    ci = commit --verbose
    ca = commit --amend
    co = checkout
    com = checkout master
    aa = add --all
    df = diff
    dfs = diff --staged
    br = branch -vv
    brs = branch -vva
    wt = worktree
    l = log --graph --abbrev-commit --decorate --format=line
    lt = log --graph --abbrev-commit --decorate --format=line -n 10
    l1 = log -n 1
    root = rev-parse --show-toplevel
    bg = bisect good
    bb = bisect bad

[pretty]
    line = %C(bold blue)%h%C(reset) -%C(bold yellow)%d%C(reset) %C(white)%s%C(reset) %C(bold green)(%ar)%C(reset) %C(dim white)<%an>%C(reset)

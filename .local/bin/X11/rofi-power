#!/bin/bash

options="logout\nswitch user\nsuspend\nreboot\nshutdown\ncancel"
style='* { color-accent: @color-red; } #element { padding: 3px 16px; }'
selected="$(echo -e "$options" | rofi -p 'powermenu' -dmenu -theme dmenu -theme-str "$style")"
case $selected in

'logout')
    i3-msg exit
    ;;

'switch user')
    dbus-send \
        --system \
        --type=method_call \
        --print-reply \
        --dest=org.freedesktop.DisplayManager \
        $XDG_SEAT_PATH \
        org.freedesktop.DisplayManager.Seat.SwitchToGreeter
    ;;

'suspend')
    mpc -q pause
    systemctl suspend
    ;;

'reboot')
    systemctl reboot
    ;;

'shutdown')
    systemctl poweroff
    ;;

esac

#!/bin/bash

optfile="$HOME/.config/shortcuts/config"
query_mode=1

log() { echo "$@" >&2; }
die() { log "$@"; exit 1; }

print_help() {
    log 'Usage: config [-q] [-i|-e|-l|<config>]'
    log
    log '  <config>               -- select config'
    log '  -l, --list             -- print config list'
    log '  -e, --edit             -- edit config list'
    log '  -i, --interactive      -- select config interactively'
    log '  -q, --query            -- print the output and exit'
    exit 1
}

run() {
    if [ "$query_mode" -ne 0 ]; then
        exec $EDITOR "$1"
    else
        echo "$1"
        exit 0
    fi
}

match_and_run() {
    file=$(dictionary --values "$optfile" "$1" 2>/dev/null | sed "s|^~/|$HOME/|")
    [ -z "$file" ] && die 'Option not found'
    run "$file"
}

[ -z "$1" ] && print_help

if [ "$1" = '-q' ] || [ "$1" = '--query' ]; then
    query_mode=0
    shift
fi

[ -z "$1" ] && print_help

if [ "$1" = '-i' ] || [ "$1" = '--interactive' ]; then
    opts=$(dictionary --keys "$optfile")
    (echo "$opts" | awk '{ print NR ") " $0 }') >&2
    read -rp "Select: " x
    opt=$(echo "$opts" | awk "NR == $x { print \$0; exit }")
    match_and_run "$opt"
fi

if [ "$1" = '-e' ] || [ "$1" = '--edit' ]; then
    run "$optfile"
fi

if [ "$1" = '-l' ] || [ "$1" = '--list' ]; then
    dictionary --keys "$optfile"
    exit $?
fi

match_and_run "$1"
